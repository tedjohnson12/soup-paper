@article{kallinger2014,
  title = {The Connection between Stellar Granulation and Oscillation as Seen by the {{Kepler}} Mission},
  author = {Kallinger, T. and De Ridder, J. and Hekker, S. and Mathur, S. and Mosser, B. and Gruberbauer, M. and Garc{\'i}a, R. A. and Karoff, C. and Ballot, J.},
  year = {2014},

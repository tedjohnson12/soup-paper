@misc{magic2014,
  title = {The {{Stagger-grid}}: {{A}} Grid of {{3D}} Stellar Atmosphere Models - {{VI}}. {{Surface}} Appearance of Stellar Granulation},
  shorttitle = {The {{Stagger-grid}}},
  author = {Magic, Zazralt and Asplund, Martin},
  year = {2014},
